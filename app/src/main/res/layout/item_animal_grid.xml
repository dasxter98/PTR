<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150sp"
    android:layout_height="150sp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/estilo_item_h"
    android:elevation="5dp"
    android:foregroundGravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_mascota"
            android:layout_width="match_parent"
            android:layout_height="129dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_nombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:fontFamily="sans-serif-black"
                android:foregroundTint="#000000"
                android:gravity="center"
                android:paddingLeft="5sp"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                app:drawableTint="#000000" />

            <TextView
                android:id="@+id/txt_item_edad"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="#000000"
                android:fontFamily="sans-serif-black"
                android:foregroundTint="#000000"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp"
                app:drawableTint="#000000" />

            <ImageView
                android:id="@+id/img_item_genero"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center" />

            <TextView
                android:id="@+id/txt_item_peso"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:fontFamily="sans-serif-black"
                android:foregroundTint="#000000"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="10sp"
                app:drawableTint="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/img_item_chip2"
                android:layout_width="6dp"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:background="@drawable/chip" />

            <TextView
                android:id="@+id/txt_chip"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img_item_vacunas2"
                android:layout_width="9dp"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:background="@drawable/vacuna" />

            <TextView
                android:id="@+id/txt_vacuna"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txt_item_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_item_filtro"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:foregroundGravity="center|right"
                app:srcCompat="@drawable/estado_1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
