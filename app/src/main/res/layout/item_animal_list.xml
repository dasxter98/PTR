<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/estilo_item_h"
    android:elevation="5dp"
    android:foregroundGravity="bottom"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_mascota"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="3sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_nombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:fontFamily="sans-serif-black"
                android:foregroundTint="#000000"
                android:textColor="#000000"
                android:textStyle="bold"
                app:drawableTint="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_item_chip"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/chip" />

            <TextView
                android:id="@+id/txt_chip"
                android:layout_width="44dp"
                android:layout_height="25sp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img_item_vacunas"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/vacuna" />

            <TextView
                android:id="@+id/txt_vacuna"
                android:layout_width="50dp"
                android:layout_height="25sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_edad"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:fontFamily="sans-serif-black"
                android:foregroundTint="#000000"
                android:textColor="#000000"
                app:drawableTint="#000000" />

            <ImageView
                android:id="@+id/img_item_genero"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center" />


            <TextView
                android:id="@+id/txt_item_peso"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:fontFamily="sans-serif-black"
                android:foregroundTint="#000000"
                android:textColor="@color/blue"
                app:drawableTint="#000000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_item_filtro"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:foregroundGravity="center|right"
                app:srcCompat="@drawable/estado_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_item_estado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center|right"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
